<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  >

  <NumberPicker
    android:id="@+id/preference_duration_input_spinner_days"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"

    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/preference_duration_input_spinner_hours"

    />
  <NumberPicker
    android:id="@+id/preference_duration_input_spinner_hours"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"

    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toRightOf="@+id/preference_duration_input_spinner_days"
    app:layout_constraintRight_toLeftOf="@+id/preference_duration_input_spinner_minutes"
    />
  <NumberPicker
    android:id="@+id/preference_duration_input_spinner_minutes"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"

    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toRightOf="@+id/preference_duration_input_spinner_hours"
    app:layout_constraintRight_toLeftOf="@+id/preference_duration_input_spinner_seconds"
    />
  <NumberPicker
    android:id="@+id/preference_duration_input_spinner_seconds"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"

    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toRightOf="@+id/preference_duration_input_spinner_minutes"
    app:layout_constraintRight_toRightOf="parent"

    />
</android.support.constraint.ConstraintLayout>